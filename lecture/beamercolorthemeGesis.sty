\mode<presentation>

\input{gesis-colordefinitions.cfg}
%color names are: gesisblue, gesisbluelight, gesisbluevar, %
%                 gesissanddark, gesissandlight, gesisorange, gesisorangevar%
% Definitions should use gesislightbg, gesisdarkbg, gesisalerted

\setbeamercolor{example text}{fg=gesisdarkbg}
\setbeamercolor{alerted text}{fg=gesisalerted}
\setbeamercolor{structure}{fg=gesisdarkbg}

\setbeamercolor*{titlelike}{parent=structure}

\endinput
